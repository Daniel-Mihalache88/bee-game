{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["DOM", "ESNext", "DOM.Iterable", "ScriptHost"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest"]
  },
  "exclude": ["node_modules"]
}
